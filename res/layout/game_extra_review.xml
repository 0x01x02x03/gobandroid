<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="fill_parent" android:orientation="vertical" android:weightSum="11" >
		

		<LinearLayout 
			android:layout_width="fill_parent" android:id="@+id/container_for_nav" android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"     android:layout_alignParentRight="true" >
		</LinearLayout>

		    <!--  sometimes we have big comments -->
		    <ScrollView android:layout_width="fill_parent"
		    android:layout_height="match_parent"
			android:padding="5dip"
			android:layout_above="@id/container_for_nav">

		        <TextView
			    android:id="@+id/comments_textview"
			    android:layout_width="fill_parent"
			    android:layout_height="match_parent"
			    android:layout_alignParentTop="true"
			    android:layout_margin="3dip"
			    android:layout_weight="10"
			    android:text=""
			    android:textColor="#FF000000" />
			</ScrollView>
</RelativeLayout>
