 <selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed  -->
    <item android:state_pressed="true"><layer-list>
            <item android:drawable="@drawable/holo_transparent_bg_darker"/>
            <item android:drawable="@drawable/dashboard_record"/>
        </layer-list></item>
    
    <!-- focused -->
    <item android:state_focused="true"><layer-list>
            <item android:drawable="@drawable/holo_transparent_bg"/>
            <item android:drawable="@drawable/dashboard_record"/>
        </layer-list></item>
    
    <!-- default -->
    <item android:drawable="@drawable/dashboard_record" /> 
 </selector>
 