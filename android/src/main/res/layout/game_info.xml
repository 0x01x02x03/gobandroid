<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/dialog_minwidth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/game_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletFloatingHint="@string/game_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/black_name_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                float:fletFloatingHint="@string/black_name"
                android:layout_weight="1" />


            <Button
                android:id="@+id/user_is_black_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/it_is_me" />
        </LinearLayout>


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/black_rank_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletFloatingHint="@string/black_rank" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/white_name_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                float:fletFloatingHint="@string/white_name"
                android:layout_weight="1" />


            <Button
                android:id="@+id/user_is_white_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/it_is_me" />
        </LinearLayout>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/white_rank_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletFloatingHint="@string/white_rank" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/komi_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletFloatingHint="@string/komi" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/game_result_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletFloatingHint="@string/game_result" />


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/game_date_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletFloatingHint="@string/date" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/game_difficulty_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletFloatingHint="@string/game_difficulty" />

    </LinearLayout>
</ScrollView>