<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.ligi.gobandroid"
      android:versionName="0.24" android:versionCode="24">
    
     <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />
    
     <supports-screens android:largeScreens="true"
						  android:normalScreens="true" 
						  android:smallScreens="true"
						  android:anyDensity="true" /> 

    <!-- Permission to keep the screen awake -->  
    <uses-permission android:name="android.permission.WAKE_LOCK" />
     
     
    <supports-screens android:anyDensity="true" />
      
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".ui.gobandroid"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    	<activity android:name="org.ligi.gobandroid.ui.GoActivity"></activity>
		<activity android:name="org.ligi.gobandroid.ui.SettingsActivity"></activity>
		<activity android:name=".ui.GoSetupActivity"></activity>
		<activity android:name=".ui.SGFListActivity"></activity>
		<activity android:name=".ui.GoPrefsActivity"></activity>
	</application>
    
</manifest> 