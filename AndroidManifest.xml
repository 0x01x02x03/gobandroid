<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.ligi.gobandroid"
      android:versionName="0.17" android:versionCode="17">
    
    <uses-sdk android:minSdkVersion="2" />
    
    <!-- Permission to keep the screen awake -->  
    <uses-permission android:name="android.permission.WAKE_LOCK" />
      
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".ui.gobandroid"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    	<activity android:name="org.ligi.gobandroid.ui.GoActivity"></activity>
		<activity android:name="org.ligi.gobandroid.ui.SettingsActivity"></activity>
		<activity android:name=".ui.GoSetupActivity"></activity>
		<activity android:name=".ui.SGFListActivity"></activity>
	</application>
    
</manifest> 